# AI Companion Platform - Environment Variables
# Copy this file to .env and fill in your API keys
# NEVER commit .env to version control

# Google Gemini API (LLM backbone)
# Get your key at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs (Voice synthesis & speech-to-text)
# Get your key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Application Environment
NODE_ENV=development
FLUTTER_ENV=development

# Backend Server
BACKEND_URL=http://localhost:3001
BACKEND_PORT=3001

# Admin Dashboard
ADMIN_DASHBOARD_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# Database (local development)
DATABASE_URL=postgresql://localhost:5432/agecomp_dev

# JWT Secret for authentication
JWT_SECRET=generate_a_random_jwt_secret_here
JWT_EXPIRY=24h

# Encryption key for data at rest
ENCRYPTION_KEY=generate_a_256_bit_key_here
